class Solution:
    def validPalindrome(self, s: str) -> bool:
        
        def isPal(s, left, right):
            while left < right:
                if s[left] != s[right]:
                    return False
                left += 1
                right -= 1
            return True

        left, right = 0, len(s) - 1

        while left < right:
            if s[left] == s[right]:
                left += 1
                right -= 1
            else:
                
                return isPal(s, left + 1, right) or isPal(s, left, right - 1)

        return True
